<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/judulTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/posterImageView"
        android:text="judul movie"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deskripsiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judulTextView"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/posterImageView"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="deskripsi" />

    <TextView
        android:id="@+id/tanggalRilisTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deskripsiTextView"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/posterImageView"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Tanggal Rilis" />


</RelativeLayout>